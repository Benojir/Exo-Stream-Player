<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="5dp"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="5dp"
        android:orientation="vertical"
        tools:ignore="HardcodedText">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumbnailView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/sample_thumbnail"
                android:contentDescription="Thumbnail"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                tools:ignore="HardcodedText"
                android:foreground="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/videoDurationTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:47:45"
                android:background="#80000000"
                android:textColor="@color/white"
                android:layout_gravity="top|start"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textSize="11sp"
                android:layout_margin="0dp"/>

        </FrameLayout>

        <TextView
            android:id="@+id/videoTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is dummy text"
            tools:ignore="HardcodedText"
            android:textAlignment="center"
            android:textColor="?attr/text_color"
            android:maxLines="1"
            android:singleLine="true"
            android:lines="1"
            android:padding="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/videoSizeTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="130.5 MB"
                android:textAlignment="textStart"
                android:paddingHorizontal="5dp"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/modifiedDateTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="15/09/2010"
                tools:ignore="HardcodedText"
                android:paddingHorizontal="5dp"
                android:textAlignment="textEnd"
                android:textSize="11sp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>